        <VerticalStackLayout>
            <Grid>
                <Frame 
    WidthRequest="150" 
    HeightRequest="150" 
    CornerRadius="75" 
    BorderColor="Gray" 
    HasShadow="True"
    HorizontalOptions="Center"
    VerticalOptions="Center"
                    Margin="10,0,0,0">
                    <Frame.Content>
                        <Image Source="paris" Aspect="AspectFill"
                    WidthRequest="200"
                   HeightRequest="150"
                               
                   />
                    </Frame.Content>
                </Frame>
            </Grid>
            <Label
                Margin="58,17,20,30"
               
                FontSize="Title"
                Text="Juegos Olimpicos"/>
            <Button Text="Ángel Barajas"
               Background="White"
                Clicked="irApagina1"
                Margin="20,18"/>

            <Button Text="Yeison López"
               Clicked="irApagina2"
               Background="White"
               Margin="20,18"/>


            <Button Text="Mari Leivis Sánchez"
                Clicked="irApagina3"
                    Background="White"
                Margin="20,18"/>


            <Button Text="Tatiana Rentería"
                Clicked="irApagina4"
                Background="White"
                Margin="20,18"/>


        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>